    </div>
</footer>

<style>
    .footer {
        background-color: #f8f8f8;
        padding: 2rem 0;
        margin-top: auto;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .footer-left {
        display: flex;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .footer-copyright {
        margin: 0;
        font-size: 0.95rem;
        color: #333;
    }

    .footer-links {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer-link {
        color: #333;
        text-decoration: none;
        font-size: 0.95rem;
        transition: color 0.3s ease;
    }

    .footer-link:hover {
        color: #666;
        text-decoration: underline;
    }

    .footer-separator {
        color: #333;
    }

    .footer-right {
        margin-left: auto;
    }

    .footer-signature {
        margin: 0;
        font-size: 0.95rem;
        color: #333;
    }

    .heart {
        color: #e74c3c;
        display: inline-block;
    }

    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            text-align: center;
        }

        .footer-left {
            flex-direction: column;
            align-items: center;
        }

        .footer-right {
            margin-left: 0;
        }
    }
</style>
