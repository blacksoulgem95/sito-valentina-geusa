---
import type { CollectionEntry } from "astro:content";
import PageLayout from "@/layouts/PageLayout.astro";
import Section from "@/components/ui/Section.astro";
import Card from "@/components/ui/Card.astro";
import { Mail, ExternalLink } from "lucide-astro";

interface Props {
    entry: CollectionEntry<"portfolio"> | any;
    Content?: any;
    ContentProps?: any;
}

const { entry, Content, ContentProps } = Astro.props;

// Dati dinamici dal frontmatter (supporta sia CollectionEntry che oggetti Firestore)
const illustration = entry.data?.illustration || entry.illustration || {};
const images = entry.data?.images || entry.images || {};
---

<PageLayout pageTitle={entryTitle}>
    <!-- Hero Section con decorazioni -->
    <Section class="bg-pink-50 py-16 relative overflow-hidden">
        <!-- Decorazioni di sfondo -->
        <div class="absolute inset-0 pointer-events-none">
            <!-- Macchie rosa organiche -->
            <div
                class="absolute top-10 left-10 w-64 h-64 bg-pink-200 opacity-30 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute top-20 right-20 w-48 h-48 bg-pink-200 opacity-30 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute bottom-20 left-1/3 w-56 h-56 bg-pink-200 opacity-30 rounded-full blur-3xl"
            >
            </div>

            <!-- Decorazioni torte/elementi (placeholder) -->
            <div class="absolute top-8 left-[15%] text-6xl opacity-80">üç∞</div>
            <div class="absolute top-12 right-[20%] text-6xl opacity-80">
                üç∞
            </div>
            <div class="absolute top-28 left-[45%] text-6xl opacity-80">üç∞</div>
            <div class="absolute top-32 right-[35%] text-6xl opacity-80">
                üç∞
            </div>
            <div class="absolute top-20 left-[25%] text-3xl opacity-80">üçí</div>
            <div class="absolute top-36 right-[45%] text-3xl opacity-80">
                üçí
            </div>
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <!-- Breadcrumb/Navigation -->
            <div class="mb-8 text-center">
                <a
                    href="/"
                    class="text-gray-600 hover:text-primary transition-colors mx-2"
                    >Chi sono</a
                >
                <span class="text-gray-400">‚Ä¢</span>
                <a
                    href="/portfolio"
                    class="text-gray-600 hover:text-primary transition-colors mx-2"
                    >Portfolio</a
                >
                <span class="text-gray-400">‚Ä¢</span>
                <a href="/contact" class="btn btn-primary btn-sm ml-2"
                    >Contatti</a
                >
            </div>

            <!-- Badge -->
            <div class="text-center mb-12">
                <span
                    class="inline-block px-6 py-2 rounded-full text-sm font-medium bg-purple-200 text-purple-700"
                >
                    Illustrazioni
                </span>
            </div>

            <!-- Immagine Principale -->
            <div class="max-w-3xl mx-auto mb-8">
                <Card
                    variant="shadow-xl"
                    class="overflow-hidden bg-black rounded-3xl"
                >
                    {
                        images.hero ? (
                            <img
                                src={images.hero}
                                alt={entry.data.title}
                                class="w-full aspect-video object-cover"
                            />
                        ) : (
                            <div class="aspect-video bg-linear-to-br from-gray-800 to-gray-900 flex items-center justify-center">
                                <div class="text-center p-12">
                                    <ExternalLink
                                        size={64}
                                        class="mx-auto mb-4 opacity-20 text-gray-600"
                                    />
                                    <p class="text-2xl font-bold text-gray-600 uppercase tracking-wider">
                                        {entryTitle}
                                    </p>
                                </div>
                            </div>
                        )
                    }
                </Card>
            </div>

            <!-- Titolo -->
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">
                    <span class="text-gray-800">Illustrazioni </span>
                    <span class="text-purple-600">digitali</span>
                    <span class="text-gray-800"> e </span>
                    <span class="text-pink-500">tradizionali</span>
                </h1>
                <p class="text-gray-600 text-lg max-w-2xl mx-auto">
                    {illustration.subtitle || entryDescription}
                </p>
            </div>
        </div>
    </Section>

    <!-- Sezione Stile e Tecniche -->
    <Section class="bg-pink-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold mb-6">
                    <span class="text-purple-600">Stile</span>
                    <span class="text-gray-800"> e </span>
                    <span class="text-pink-500">tecniche</span>
                </h2>

                <div class="prose prose-lg prose-gray max-w-none mb-8">
                    {
                        illustration.styleDescription &&
                            illustration.styleDescription.map(
                                (paragraph: string) => (
                                    <p
                                        class="text-gray-700 leading-relaxed mb-4"
                                        set:html={paragraph.replace(
                                            /\*\*(.*?)\*\*/g,
                                            '<strong class="text-gray-800">$1</strong>',
                                        )}
                                    />
                                ),
                            )
                    }
                </div>

                <!-- Griglia di 3 immagini -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                    {
                        illustration.exampleImages &&
                        illustration.exampleImages.length > 0 ? (
                            illustration.exampleImages.map(
                                (img: string, index: number) => (
                                    <Card
                                        variant="shadow-md"
                                        class="overflow-hidden rounded-2xl"
                                    >
                                        <img
                                            src={img}
                                            alt={`Esempio ${index + 1}`}
                                            class="w-full aspect-square object-cover"
                                        />
                                    </Card>
                                ),
                            )
                        ) : (
                            <>
                                <Card
                                    variant="shadow-md"
                                    class="overflow-hidden rounded-2xl"
                                >
                                    <div class="aspect-square bg-linear-to-br from-red-400 to-red-600 flex items-center justify-center">
                                        <div class="text-center p-6">
                                            <p class="text-sm font-medium text-white opacity-70">
                                                Esempio 1
                                            </p>
                                        </div>
                                    </div>
                                </Card>
                                <Card
                                    variant="shadow-md"
                                    class="overflow-hidden rounded-2xl"
                                >
                                    <div class="aspect-square bg-linear-to-br from-pink-300 to-orange-400 flex items-center justify-center">
                                        <div class="text-center p-6">
                                            <p class="text-sm font-medium text-white opacity-70">
                                                Esempio 2
                                            </p>
                                        </div>
                                    </div>
                                </Card>
                                <Card
                                    variant="shadow-md"
                                    class="overflow-hidden rounded-2xl"
                                >
                                    <div class="aspect-square bg-linear-to-br from-gray-100 to-gray-300 flex items-center justify-center">
                                        <div class="text-center p-6">
                                            <p class="text-sm font-medium text-gray-600 opacity-70">
                                                Esempio 3
                                            </p>
                                        </div>
                                    </div>
                                </Card>
                            </>
                        )
                    }
                </div>
            </div>
        </div>
    </Section>

    <!-- Sezione Riflessioni -->
    <Section class="bg-pink-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl font-bold mb-6 text-purple-600">
                    {illustration.reflectionsTitle || "Riflessioni"}
                </h2>

                <div class="prose prose-lg prose-gray max-w-none space-y-4">
                    {
                        illustration.reflectionsContent &&
                            illustration.reflectionsContent.map(
                                (paragraph: string) => (
                                    <p
                                        class="text-gray-700 leading-relaxed"
                                        set:html={paragraph.replace(
                                            /\*\*(.*?)\*\*/g,
                                            '<strong class="text-gray-800">$1</strong>',
                                        )}
                                    />
                                ),
                            )
                    }
                </div>

                <!-- Contenuto Markdown Completo -->
                <div
                    class="prose prose-lg prose-gray max-w-none prose-headings:text-gray-800 prose-a:text-primary prose-strong:text-gray-800 mt-12"
                >
                    {Content && ContentProps ? (
                        <Content {...ContentProps} />
                    ) : Content ? (
                        <Content />
                    ) : null}
                </div>
            </div>
        </div>
    </Section>

    <!-- CTA Section -->
    <Section class="bg-white py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    <span class="text-gray-700">Creiamo qualcosa </span>
                    <span class="text-pink-500">insieme</span>
                </h2>
                <p class="text-gray-600 text-lg mb-8 max-w-2xl mx-auto">
                    Sono sempre alla ricerca di nuovi progetti entusiasmanti e
                    collaborazioni interessanti. Per qualsiasi opportunit√†, non
                    esitare a contattarmi.
                </p>

                <!-- Contact Cards -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto mb-12"
                >
                    <!-- Scrivimi -->
                    <Card
                        variant="shadow-md"
                        class="p-6 text-left bg-white hover:shadow-lg transition-shadow"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-full bg-pink-100 flex items-center justify-center shrink-0"
                            >
                                <Mail size={24} class="text-pink-600" />
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-800 mb-2">
                                    Scrivimi
                                </h3>
                                <p class="text-gray-600 text-sm mb-3">
                                    Puoi inviarmi un'email in qualsiasi momento
                                </p>
                                <a
                                    href="mailto:valentinageusa@example.com"
                                    class="text-pink-500 hover:text-pink-600 text-sm font-medium"
                                >
                                    valentinageusa@example.com
                                </a>
                            </div>
                        </div>
                    </Card>

                    <!-- Parliamone -->
                    <Card
                        variant="shadow-md"
                        class="p-6 text-left bg-white hover:shadow-lg transition-shadow"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center shrink-0"
                            >
                                <ExternalLink
                                    size={24}
                                    class="text-purple-600"
                                />
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-800 mb-2">
                                    Parliamone
                                </h3>
                                <p class="text-gray-600 text-sm mb-3">
                                    Mi piacerebbe conoscere il tuo progetto
                                </p>
                                <a
                                    href="/contact"
                                    class="text-purple-500 hover:text-purple-600 text-sm font-medium"
                                >
                                    Disponibile per collaborazioni freelance
                                </a>
                            </div>
                        </div>
                    </Card>
                </div>

                <!-- Social Links -->
                <div
                    class="flex justify-center items-center gap-6 text-gray-400"
                >
                    <span class="text-sm">Rimaniamo in contatto</span>
                    <div class="flex gap-4">
                        <a
                            href="https://instagram.com"
                            target="_blank"
                            class="hover:text-pink-500 transition-colors"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://linkedin.com"
                            target="_blank"
                            class="hover:text-purple-500 transition-colors"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                    <span class="text-2xl">‚ú®</span>
                </div>
            </div>
        </div>
    </Section>

    <!-- Footer con Privacy e Cookie Policy -->
    <footer class="bg-white py-8 border-t border-gray-200">
        <div class="container mx-auto px-4">
            <div class="text-center text-gray-600 text-sm">
                <a
                    href="/privacy-policy"
                    class="hover:text-primary transition-colors mx-2"
                    >Privacy Policy</a
                >
                <span>‚Ä¢</span>
                <a
                    href="/cookie-policy"
                    class="hover:text-primary transition-colors mx-2"
                    >Cookie Policy</a
                >
            </div>
        </div>
    </footer>
</PageLayout>

<style>
    .aspect-video {
        aspect-ratio: 16 / 9;
    }

    .aspect-square {
        aspect-ratio: 1 / 1;
    }
</style>
