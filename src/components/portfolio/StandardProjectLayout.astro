---
import type { CollectionEntry } from "astro:content";
import PageLayout from "@/layouts/PageLayout.astro";
import Section from "@/components/ui/Section.astro";
import Card from "@/components/ui/Card.astro";
import { Mail, ExternalLink } from "lucide-astro";
import SocialLinks from "@/components/SocialLinks.astro";

interface Props {
    entry: CollectionEntry<"portfolio"> | any;
    Content?: any;
    ContentProps?: any;
}

const { entry, Content, ContentProps } = Astro.props;

// Helper per accedere ai dati (supporta sia CollectionEntry che oggetti Firestore)
const getData = (key: string) => entry.data?.[key] ?? entry[key];

// Dati dinamici dal frontmatter (supporta sia CollectionEntry che oggetti Firestore)
const objectives = getData('objectives') || [];
const results = getData('results') || {};
const reflections = getData('reflections') || {};
const images = getData('images') || {};
const entryType = getData('type') || 'ui-ux';
const entryTitle = getData('title') || '';
const entryCategory = getData('category') || '';
const entryClient = getData('client') || '';

// Configurazione colori badge per categoria
const badgeColors = {
    "ui-ux": "bg-pink-200 text-pink-700",
    "brand-identity": "bg-green-200 text-green-700",
    editorial: "bg-purple-200 text-purple-700",
    "web-design": "bg-blue-200 text-blue-700",
};

const badgeColor =
    badgeColors[entryType as keyof typeof badgeColors] ||
    "bg-pink-200 text-pink-700";

// Estrai nome del cliente o progetto per evidenziare
const highlightText = entryClient || entryTitle.split(" ").pop();

// Mappa colori per le card obiettivi
const colorClasses = {
    blue: "text-blue-600 bg-blue-100",
    purple: "text-purple-600 bg-purple-100",
    orange: "text-orange-600 bg-orange-100",
    indigo: "text-indigo-600 bg-indigo-100",
};
---

<PageLayout pageTitle={entryTitle}>
    <!-- Hero Section con decorazioni -->
    <Section class="bg-pink-50 py-16 relative overflow-hidden">
        <!-- Decorazioni di sfondo -->
        <div class="absolute inset-0 pointer-events-none">
            <!-- Macchie rosa organiche -->
            <div
                class="absolute top-10 left-10 w-64 h-64 bg-pink-200 opacity-30 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute top-20 right-20 w-48 h-48 bg-pink-200 opacity-30 rounded-full blur-3xl"
            >
            </div>
            <div
                class="absolute bottom-20 left-1/3 w-56 h-56 bg-pink-200 opacity-30 rounded-full blur-3xl"
            >
            </div>

            <!-- Decorazioni torte/elementi -->
            <div class="absolute top-8 left-[15%] text-6xl opacity-80">üç∞</div>
            <div class="absolute top-12 right-[20%] text-6xl opacity-80">
                üç∞
            </div>
            <div class="absolute top-28 left-[45%] text-6xl opacity-80">üç∞</div>
            <div class="absolute top-32 right-[35%] text-6xl opacity-80">
                üç∞
            </div>
            <div class="absolute top-20 left-[25%] text-3xl opacity-80">üçí</div>
            <div class="absolute top-36 right-[45%] text-3xl opacity-80">
                üçí
            </div>
        </div>

        <div class="container mx-auto px-4 relative z-10">
            <!-- Breadcrumb/Navigation -->
            <div class="mb-8 text-center">
                <a
                    href="/"
                    class="text-gray-600 hover:text-primary transition-colors mx-2"
                    >Chi sono</a
                >
                <span class="text-gray-400">‚Ä¢</span>
                <a
                    href="/portfolio"
                    class="text-gray-600 hover:text-primary transition-colors mx-2"
                    >Portfolio</a
                >
                <span class="text-gray-400">‚Ä¢</span>
                <a href="/contact" class="btn btn-primary btn-sm ml-2"
                    >Contatti</a
                >
            </div>

            <!-- Badge -->
            <div class="text-center mb-12">
                <span
                    class={`inline-block px-6 py-2 rounded-full text-sm font-medium ${badgeColor}`}
                >
                    {entryCategory}
                </span>
            </div>
        </div>
    </Section>

    <!-- Immagine Mockup Grande -->
    <Section class="bg-amber-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-5xl mx-auto">
                <Card
                    variant="shadow-2xl"
                    class="overflow-hidden rounded-3xl bg-gray-100"
                >
                    {
                        images.mockup ? (
                            <img
                                src={images.mockup}
                                alt={entryTitle}
                                class="w-full aspect-video object-cover"
                            />
                        ) : (
                            <div class="aspect-video flex items-center justify-center p-12">
                                <div class="text-center">
                                    <ExternalLink
                                        size={80}
                                        class="mx-auto mb-6 opacity-20 text-gray-400"
                                    />
                                    <p class="text-3xl font-bold text-gray-300 uppercase tracking-wider mb-2">
                                        {entryTitle}
                                    </p>
                                    <p class="text-gray-400">
                                        Immagine mockup principale
                                    </p>
                                </div>
                            </div>
                        )
                    }
                </Card>
            </div>
        </div>
    </Section>

    <!-- Titolo Progetto -->
    <Section class="bg-amber-50 pt-8 pb-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-700">
                    {entry.data.title.replace(highlightText || "", "")}
                    <span class="text-orange-500">{highlightText}</span>
                </h1>
                <p class="text-gray-600 text-lg">
                    {getData('description') || entryTitle}
                </p>
            </div>
        </div>
    </Section>

    <!-- Sezione Obiettivo con 4 Card -->
    <Section class="bg-white py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <h2
                    class="text-3xl md:text-4xl font-bold mb-12 text-orange-400"
                >
                    Qual √® stato l'obiettivo?
                </h2>

                {
                    objectives.length > 0 && (
                        <p class="text-gray-700 text-lg mb-12 leading-relaxed">
                            Realizzare un design capace di comunicare sicurezza
                            e competenza in ambito tech. Ogni elemento √® stato
                            scelto nell'equilibrio sull'equilibrio cromatico e
                            sul messaggio da trasmettere.
                        </p>
                    )
                }

                <!-- Griglia 4 card numerate -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
                >
                    {
                        objectives.length > 0 ? (
                            objectives.map(
                                (
                                    objective: {
                                        title: string;
                                        description: string;
                                        color?: string;
                                    },
                                    index: number,
                                ) => {
                                    const color = objective.color || "blue";
                                    const colorClass =
                                        colorClasses[
                                            color as keyof typeof colorClasses
                                        ];
                                    const bgOpacity =
                                        color === "blue"
                                            ? "text-blue-100"
                                            : color === "purple"
                                              ? "text-purple-100"
                                              : color === "orange"
                                                ? "text-orange-100"
                                                : "text-indigo-100";

                                    return (
                                        <Card
                                            variant="shadow-md"
                                            class="p-6 bg-white relative"
                                        >
                                            <div
                                                class={`absolute top-4 right-4 text-6xl font-bold ${bgOpacity} opacity-50`}
                                            >
                                                {index + 1}
                                            </div>
                                            <h3
                                                class={`text-lg font-bold mb-3 ${colorClass.split(" ")[0]}`}
                                            >
                                                {objective.title}
                                            </h3>
                                            <p class="text-gray-700 text-sm leading-relaxed">
                                                {objective.description}
                                            </p>
                                        </Card>
                                    );
                                },
                            )
                        ) : (
                            <p class="text-gray-500 col-span-full text-center py-8">
                                Nessun obiettivo specificato per questo
                                progetto.
                            </p>
                        )
                    }
                </div>
            </div>
        </div>
    </Section>

    <!-- Sezione Risultato Finale -->
    <Section class="bg-orange-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold mb-8 text-orange-400">
                    {results.title || "Risultato finale"}
                </h2>

                <div
                    class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
                >
                    <!-- Colonna Testo -->
                    <div class="space-y-4">
                        {
                            results.paragraphs &&
                            results.paragraphs.length > 0 ? (
                                results.paragraphs.map((paragraph: string) => (
                                    <p
                                        class="text-gray-700 leading-relaxed"
                                        set:html={paragraph
                                            .replace(
                                                /\*\*(.*?)\*\*/g,
                                                '<strong class="text-gray-900">$1</strong>',
                                            )
                                            .replace(
                                                /\*\*blu elettrico\*\*/gi,
                                                '<strong class="text-blue-600">blu elettrico</strong>',
                                            )}
                                    />
                                ))
                            ) : (
                                <p class="text-gray-500">
                                    Nessun risultato specificato per questo
                                    progetto.
                                </p>
                            )
                        }

                        {
                            results.figmaLink && (
                                <p class="text-gray-600 italic text-sm mt-6">
                                    üîó{" "}
                                    <a
                                        href={results.figmaLink}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="text-primary hover:underline"
                                    >
                                        Guarda il progetto completo su Figma
                                    </a>
                                </p>
                            )
                        }
                    </div>

                    <!-- Colonna Immagine -->
                    <div>
                        <Card
                            variant="shadow-xl"
                            class="overflow-hidden rounded-3xl"
                        >
                            {
                                images.result ? (
                                    <img
                                        src={images.result}
                                        alt="Risultato finale"
                                        class="w-full aspect-square object-cover"
                                    />
                                ) : (
                                    <div class="aspect-square bg-linear-to-br from-gray-100 to-gray-300 flex items-center justify-center p-8">
                                        <div class="text-center">
                                            <ExternalLink
                                                size={64}
                                                class="mx-auto mb-4 opacity-20 text-gray-500"
                                            />
                                            <p class="text-xl font-medium text-gray-400">
                                                Immagine risultato
                                            </p>
                                        </div>
                                    </div>
                                )
                            }
                        </Card>
                    </div>
                </div>
            </div>
        </div>
    </Section>

    <!-- Sezione Riflessioni -->
    <Section class="bg-white py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold mb-8 text-orange-400">
                    {reflections.title || "Riflessioni"}
                </h2>

                <div class="prose prose-lg prose-gray max-w-none">
                    {
                        reflections.content &&
                        reflections.content.length > 0 ? (
                            reflections.content.map((paragraph: string) => (
                                <p
                                    class="text-gray-700 leading-relaxed mb-4"
                                    set:html={paragraph.replace(
                                        /\*\*(.*?)\*\*/g,
                                        '<strong class="text-gray-900">$1</strong>',
                                    )}
                                />
                            ))
                        ) : (
                            <p class="text-gray-500">
                                Nessuna riflessione specificata per questo
                                progetto.
                            </p>
                        )
                    }
                </div>

                <!-- Contenuto Markdown Completo -->
                <div
                    class="prose prose-lg prose-gray max-w-none prose-headings:text-gray-800 prose-a:text-primary prose-strong:text-gray-900 mt-12"
                >
                    {Content && ContentProps ? (
                        <Content {...ContentProps} />
                    ) : Content ? (
                        <Content />
                    ) : null}
                </div>
            </div>
        </div>
    </Section>

    <!-- CTA Section -->
    <Section class="bg-pink-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    <span class="text-gray-700">Creiamo qualcosa </span>
                    <span class="text-pink-500">insieme</span>
                </h2>
                <p class="text-gray-600 text-lg mb-8 max-w-2xl mx-auto">
                    Sono sempre alla ricerca di nuovi progetti entusiasmanti e
                    collaborazioni interessanti. Per qualsiasi opportunit√†, non
                    esitare a contattarmi.
                </p>

                <!-- Contact Cards -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-3xl mx-auto mb-12"
                >
                    <!-- Scrivimi -->
                    <Card
                        variant="shadow-md"
                        class="p-6 text-left bg-white hover:shadow-lg transition-shadow"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-full bg-pink-100 flex items-center justify-center shrink-0"
                            >
                                <Mail size={24} class="text-pink-600" />
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-800 mb-2">
                                    Scrivimi
                                </h3>
                                <p class="text-gray-600 text-sm mb-3">
                                    Puoi inviarmi un'email in qualsiasi momento
                                </p>
                                <a
                                    href="mailto:valentinageusa@example.com"
                                    class="text-pink-500 hover:text-pink-600 text-sm font-medium"
                                >
                                    valentinageusa@example.com
                                </a>
                            </div>
                        </div>
                    </Card>

                    <!-- Parliamone -->
                    <Card
                        variant="shadow-md"
                        class="p-6 text-left bg-white hover:shadow-lg transition-shadow"
                    >
                        <div class="flex items-start gap-4">
                            <div
                                class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center shrink-0"
                            >
                                <ExternalLink
                                    size={24}
                                    class="text-purple-600"
                                />
                            </div>
                            <div>
                                <h3 class="font-bold text-gray-800 mb-2">
                                    Parliamone
                                </h3>
                                <p class="text-gray-600 text-sm mb-3">
                                    Mi piacerebbe conoscere il tuo progetto
                                </p>
                                <a
                                    href="/contact"
                                    class="text-purple-500 hover:text-purple-600 text-sm font-medium"
                                >
                                    Disponibile per collaborazioni freelance
                                </a>
                            </div>
                        </div>
                    </Card>
                </div>

                <!-- Social Links -->
                <div
                    class="flex justify-center items-center gap-6 text-gray-400"
                >
                    <span class="text-sm">Rimaniamo in contatto</span>
                    <SocialLinks variant="simple" />
                    <span class="text-2xl">‚ú®</span>
                </div>
            </div>
        </div>
    </Section>

    <!-- Footer -->
    <footer class="bg-pink-100 py-8">
        <div class="container mx-auto px-4">
            <div class="text-center text-gray-600 text-sm space-y-2">
                <p>
                    ¬© {new Date().getFullYear()} Valentina Geusa - All rights reserved
                </p>
                <div>
                    <a
                        href="/privacy-policy"
                        class="hover:text-primary transition-colors mx-2"
                        >Privacy Policy</a
                    >
                    <span>‚Ä¢</span>
                    <a
                        href="/cookie-policy"
                        class="hover:text-primary transition-colors mx-2"
                        >Cookie Policy</a
                    >
                </div>
                <p class="text-xs">
                    Designed with <span class="text-red-500">‚ù§Ô∏è</span> by Valentina
                    Geusa
                </p>
            </div>
        </div>
    </footer>
</PageLayout>

<style>
    .aspect-video {
        aspect-ratio: 16 / 9;
    }

    .aspect-square {
        aspect-ratio: 1 / 1;
    }
</style>
