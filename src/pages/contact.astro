---
import PageLayout from "@/layouts/PageLayout.astro";
import Section from "@/components/ui/Section.astro";
import Card from "@/components/ui/Card.astro";
import Input from "@/components/ui/Input.astro";
import Textarea from "@/components/ui/Textarea.astro";
import { Mail, Send, MessageCircle, Heart } from "lucide-astro";
import Hero from "@/components/Hero.astro";
import SocialLinks from "@/components/SocialLinks.astro";

const pageTitle = "Contattami";
---

<PageLayout pageTitle={pageTitle}>
    <Hero>
        <Fragment slot="title">
            <span class="text-gray-800">Creiamo qualcosa </span>
            <span class="text-pink-500">insieme</span>
        </Fragment>
    </Hero>

    <!-- Sezione Form Contatto -->
    <Section class="bg-white py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-6xl mx-auto">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
                    <!-- Colonna Sinistra - Info -->
                    <div class="space-y-6">
                        <div>
                            <div class="flex items-center gap-3 mb-4">
                                <MessageCircle
                                    size={32}
                                    class="text-pink-500"
                                />
                                <h2 class="text-3xl font-bold text-gray-800">
                                    Parliamone
                                </h2>
                            </div>
                            <p class="text-gray-600 text-lg leading-relaxed">
                                Mi piacerebbe conoscere il tuo progetto e capire
                                come posso aiutarti a realizzare la tua visione
                                creativa.
                            </p>
                        </div>

                        <!-- Card Email -->
                        <Card
                            variant="shadow-md"
                            class="p-6 bg-pink-50 hover:shadow-lg transition-shadow"
                        >
                            <div class="flex items-start gap-4">
                                <div
                                    class="w-12 h-12 rounded-full bg-pink-200 flex items-center justify-center shrink-0"
                                >
                                    <Mail size={24} class="text-pink-600" />
                                </div>
                                <div>
                                    <h3 class="font-bold text-gray-800 mb-2">
                                        Scrivimi direttamente
                                    </h3>
                                    <p class="text-gray-600 text-sm">
                                        Preferisci una email diretta? Usa il form qui accanto e ti risponder√≤ al pi√π presto!
                                    </p>
                                </div>
                            </div>
                        </Card>

                        <!-- Tempi di risposta -->
                        <div
                            class="bg-purple-50 rounded-lg p-6 border-2 border-purple-100"
                        >
                            <h3
                                class="font-bold text-gray-800 mb-3 flex items-center gap-2"
                            >
                                <Heart size={20} class="text-purple-500" />
                                Tempi di risposta
                            </h3>
                            <p class="text-gray-600 text-sm leading-relaxed">
                                Rispondo generalmente entro <strong
                                    >24-48 ore</strong
                                > nei giorni lavorativi. Se non ricevi risposta,
                                controlla la cartella spam o scrivimi direttamente
                                via email.
                            </p>
                        </div>

                        <!-- Social -->
                        <div>
                            <h3 class="font-bold text-gray-800 mb-4">
                                Seguimi sui social
                            </h3>
                            <SocialLinks />
                        </div>
                    </div>

                    <!-- Colonna Destra - Form -->
                    <div>
                        <Card variant="shadow-lg" class="p-8 bg-white">
                            <form
                                class="space-y-6"
                                id="contact-form"
                            >
                                <div>
                                    <label
                                        for="name"
                                        class="block text-sm font-semibold text-gray-700 mb-2"
                                    >
                                        Nome <span class="text-pink-500">*</span
                                        >
                                    </label>
                                    <Input
                                        type="text"
                                        id="name"
                                        name="nome"
                                        required
                                        placeholder="Il tuo nome"
                                    />
                                </div>

                                <div>
                                    <label
                                        for="email"
                                        class="block text-sm font-semibold text-gray-700 mb-2"
                                    >
                                        Email <span class="text-pink-500"
                                            >*</span
                                        >
                                    </label>
                                    <Input
                                        type="email"
                                        id="email"
                                        name="email"
                                        required
                                        placeholder="la.tua@email.com"
                                        autocomplete="email"
                                    />
                                </div>

                                <div>
                                    <label
                                        for="subject"
                                        class="block text-sm font-semibold text-gray-700 mb-2"
                                    >
                                        Oggetto
                                    </label>
                                    <Input
                                        type="text"
                                        id="subject"
                                        name="oggetto"
                                        placeholder="Di cosa vorresti parlare?"
                                    />
                                </div>

                                <div>
                                    <label
                                        for="message"
                                        class="block text-sm font-semibold text-gray-700 mb-2"
                                    >
                                        Messaggio <span class="text-pink-500"
                                            >*</span
                                        >
                                    </label>
                                    <Textarea
                                        id="message"
                                        name="messaggio"
                                        rows={6}
                                        required
                                        placeholder="Parlami del tuo progetto, delle tue idee o semplicemente di cosa hai bisogno..."
                                        resize="none"
                                    />
                                </div>

                                <div class="flex items-start gap-3">
                                    <input
                                        type="checkbox"
                                        id="privacy"
                                        name="privacy"
                                        required
                                        class="mt-1 w-4 h-4 text-pink-500 border-gray-300 rounded focus:ring-pink-500"
                                    />
                                    <label
                                        for="privacy"
                                        class="text-sm text-gray-600"
                                    >
                                        Accetto la <a
                                            href="/privacy-policy"
                                            class="text-pink-500 hover:underline"
                                            >Privacy Policy</a
                                        > e autorizzo il trattamento dei miei dati
                                        personali
                                    </label>
                                </div>

                                <button
                                    type="submit"
                                    id="contact-submit-button"
                                    class="btn btn-primary w-full flex items-center justify-center gap-2 text-lg py-3"
                                >
                                    <Send size={20} />
                                    Invia messaggio
                                </button>

                                <p class="text-xs text-gray-500 text-center">
                                    I campi contrassegnati con <span
                                        class="text-pink-500">*</span
                                    > sono obbligatori
                                </p>
                            </form>
                        </Card>
                    </div>
                </div>
            </div>
        </div>
    </Section>

    <!-- Sezione Newsletter -->
    <Section class="bg-linear-to-br from-pink-50 to-purple-50 py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
                <div class="mb-8">
                    <div class="text-6xl mb-4">üíå</div>
                    <h2 class="text-3xl md:text-4xl font-bold mb-4">
                        <span class="text-gray-800">Iscriviti alla </span>
                        <span class="text-purple-600">newsletter</span>
                    </h2>
                    <p class="text-gray-600 text-lg">
                        Ricevi aggiornamenti sui miei progetti, tips creativi e
                        contenuti esclusivi direttamente nella tua inbox. Niente
                        spam, promesso! üíú
                    </p>
                </div>

                <Card
                    variant="shadow-lg"
                    class="p-8 bg-white max-w-2xl mx-auto"
                >
                    <form
                        class="space-y-6"
                        id="newsletter-form"
                        name="newsletter"
                        method="POST"
                        data-netlify="true"
                        netlify-honeypot="bot-field"
                    >
                        <input type="hidden" name="bot-field" />
                        <input
                            type="hidden"
                            name="form-name"
                            value="newsletter"
                        />

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label
                                    for="newsletter-name"
                                    class="block text-sm font-semibold text-gray-700 mb-2 text-left"
                                >
                                    Nome
                                </label>
                                <Input
                                    type="text"
                                    id="newsletter-name"
                                    name="name"
                                    required
                                    placeholder="Il tuo nome"
                                />
                            </div>
                            <div>
                                <label
                                    for="newsletter-email"
                                    class="block text-sm font-semibold text-gray-700 mb-2 text-left"
                                >
                                    Email
                                </label>
                                <Input
                                    type="email"
                                    id="newsletter-email"
                                    name="email"
                                    required
                                    placeholder="la.tua@email.com"
                                    autocomplete="email"
                                />
                            </div>
                        </div>

                        <div class="text-left">
                            <p class="text-sm font-semibold text-gray-700 mb-3">
                                Interessi (opzionale)
                            </p>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                                <label
                                    class="flex items-center gap-2 cursor-pointer"
                                >
                                    <input
                                        type="checkbox"
                                        name="interests[]"
                                        value="illustration"
                                        class="w-4 h-4 text-purple-500 border-gray-300 rounded focus:ring-purple-500"
                                    />
                                    <span class="text-sm text-gray-700"
                                        >Illustrazioni</span
                                    >
                                </label>
                                <label
                                    class="flex items-center gap-2 cursor-pointer"
                                >
                                    <input
                                        type="checkbox"
                                        name="interests[]"
                                        value="ui-ux"
                                        class="w-4 h-4 text-purple-500 border-gray-300 rounded focus:ring-purple-500"
                                    />
                                    <span class="text-sm text-gray-700"
                                        >UI/UX Design</span
                                    >
                                </label>
                                <label
                                    class="flex items-center gap-2 cursor-pointer"
                                >
                                    <input
                                        type="checkbox"
                                        name="interests[]"
                                        value="brand"
                                        class="w-4 h-4 text-purple-500 border-gray-300 rounded focus:ring-purple-500"
                                    />
                                    <span class="text-sm text-gray-700"
                                        >Brand Identity</span
                                    >
                                </label>
                                <label
                                    class="flex items-center gap-2 cursor-pointer"
                                >
                                    <input
                                        type="checkbox"
                                        name="interests[]"
                                        value="tips"
                                        class="w-4 h-4 text-purple-500 border-gray-300 rounded focus:ring-purple-500"
                                    />
                                    <span class="text-sm text-gray-700"
                                        >Tips & Tutorial</span
                                    >
                                </label>
                            </div>
                        </div>

                        <div class="flex items-start gap-3">
                            <input
                                type="checkbox"
                                id="newsletter-privacy"
                                name="privacy"
                                required
                                class="mt-1 w-4 h-4 text-purple-500 border-gray-300 rounded focus:ring-purple-500"
                            />
                            <label
                                for="newsletter-privacy"
                                class="text-sm text-gray-600 text-left"
                            >
                                Accetto di ricevere email e autorizzo il
                                trattamento dei dati secondo la <a
                                    href="/privacy-policy"
                                    class="text-purple-500 hover:underline"
                                    >Privacy Policy</a
                                >
                            </label>
                        </div>

                        <button
                            type="submit"
                            class="btn btn-primary w-full flex items-center justify-center gap-2 text-lg py-3 bg-purple-600 hover:bg-purple-700"
                            style="background-color: #9333ea;"
                        >
                            ‚ú® Iscriviti alla Newsletter
                        </button>

                        <p class="text-xs text-gray-500">
                            Puoi annullare l'iscrizione in qualsiasi momento. No
                            spam, solo contenuti di valore!
                        </p>
                    </form>
                </Card>

                <!-- Benefici Newsletter -->
                <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div class="text-center">
                        <div class="text-4xl mb-3">üé®</div>
                        <h3 class="font-bold text-gray-800 mb-2">
                            Progetti Esclusivi
                        </h3>
                        <p class="text-sm text-gray-600">
                            Anteprima dei miei nuovi lavori prima di chiunque
                            altro
                        </p>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl mb-3">üí°</div>
                        <h3 class="font-bold text-gray-800 mb-2">
                            Tips & Tutorial
                        </h3>
                        <p class="text-sm text-gray-600">
                            Consigli pratici su design, illustrazione e
                            creativit√†
                        </p>
                    </div>
                    <div class="text-center">
                        <div class="text-4xl mb-3">üéÅ</div>
                        <h3 class="font-bold text-gray-800 mb-2">
                            Contenuti Speciali
                        </h3>
                        <p class="text-sm text-gray-600">
                            Risorse gratuite, sconti e opportunit√† riservate
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </Section>

    <!-- CTA finale -->
    <Section class="bg-white py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center">
                <h2 class="text-3xl font-bold text-gray-800 mb-4">
                    Non sei ancora pronto a scrivermi?
                </h2>
                <p class="text-gray-600 text-lg mb-8">
                    Nessun problema! Esplora il mio portfolio o scopri di pi√π
                    sul mio lavoro.
                </p>
                <div class="flex justify-center gap-4 flex-wrap">
                    <a href="/portfolio" class="btn btn-primary btn-outline"
                        >Vedi il Portfolio</a
                    >
                    <a href="/about" class="btn btn-primary btn-outline"
                        >Chi sono</a
                    >
                </div>
            </div>
        </div>
    </Section>
</PageLayout>

<style>
    .form-input {
        width: 100%;
        padding: 0.875rem 1rem;
        border: 2px solid #e5e7eb;
        border-radius: 0.5rem;
        font-size: 1rem;
        transition: all 0.2s ease;
        background-color: white;
    }

    .form-input:focus {
        outline: none;
        border-color: #ec4899;
        box-shadow: 0 0 0 3px rgba(236, 72, 153, 0.1);
    }

    .form-input::placeholder {
        color: #9ca3af;
    }

    textarea.form-input {
        resize: vertical;
        min-height: 120px;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        background: linear-gradient(135deg, #fce7f3 0%, #e9d5ff 100%);
        border-radius: 50%;
        color: #9333ea;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .social-icon:hover {
        transform: translateY(-4px) scale(1.05);
        box-shadow: 0 8px 16px rgba(147, 51, 234, 0.3);
        background: linear-gradient(135deg, #9333ea 0%, #ec4899 100%);
        color: white;
    }

    /* Animazioni form */
    #contact-form,
    #newsletter-form {
        animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Success message styles */
    .success-message {
        padding: 1rem;
        background-color: #d1fae5;
        border: 2px solid #6ee7b7;
        border-radius: 0.5rem;
        color: #065f46;
        font-weight: 500;
        text-align: center;
        margin-top: 1rem;
        animation: slideDown 0.3s ease-out;
    }

    .error-message {
        padding: 1rem;
        background-color: #fee2e2;
        border: 2px solid #fca5a5;
        border-radius: 0.5rem;
        color: #991b1b;
        font-weight: 500;
        text-align: center;
        margin-top: 1rem;
        animation: slideDown 0.3s ease-out;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    // Form Contatto
    const contactForm = document.getElementById(
        "contact-form",
    ) as HTMLFormElement | null;

    const submitButton = document.getElementById(
        "contact-submit-button",
    ) as HTMLButtonElement | null;

    contactForm?.addEventListener("submit", async (e) => {
        e.preventDefault();

        if (!contactForm || !submitButton) return;

        const formData = new FormData(contactForm);
        const originalButtonHTML = submitButton.innerHTML;

        // Disabilita il pulsante durante l'invio
        submitButton.disabled = true;
        submitButton.innerHTML =
            '<span class="inline-block animate-spin mr-2">‚è≥</span> Invio in corso...';

        // Rimuovi messaggi precedenti
        const existingMessage = contactForm.querySelector('.success-message, .error-message');
        if (existingMessage) {
            existingMessage.remove();
        }

        try {
            const response = await fetch("/api/contact", {
                method: "POST",
                body: formData,
            });

            const result = await response.json();

            if (result.success) {
                // Mostra messaggio di successo
                const successMessage = document.createElement("div");
                successMessage.className = "success-message";
                successMessage.innerHTML =
                    "‚úÖ Messaggio inviato con successo! Ti risponder√≤ al pi√π presto. üíå";
                contactForm.appendChild(successMessage);

                // Reset del form
                contactForm.reset();

                // Rimuovi il messaggio dopo 5 secondi
                setTimeout(() => {
                    successMessage.remove();
                }, 5000);
            } else {
                // Mostra messaggio di errore
                const errorMessage = document.createElement("div");
                errorMessage.className = "error-message";
                errorMessage.innerHTML = `‚ùå ${result.error || 'Si √® verificato un errore. Riprova pi√π tardi.'}`;
                contactForm.appendChild(errorMessage);

                setTimeout(() => {
                    errorMessage.remove();
                }, 5000);
            }
        } catch (error) {
            console.error('Errore:', error);
            const errorMessage = document.createElement("div");
            errorMessage.className = "error-message";
            errorMessage.innerHTML =
                "‚ùå Si √® verificato un errore. Prova a scrivermi direttamente via email.";
            contactForm.appendChild(errorMessage);

            setTimeout(() => {
                errorMessage.remove();
            }, 5000);
        } finally {
            // Ripristina il pulsante
            if (submitButton) {
                submitButton.disabled = false;
                submitButton.innerHTML = originalButtonHTML;
            }
        }
    });

    // Form Newsletter
    const newsletterForm = document.getElementById(
        "newsletter-form",
    ) as HTMLFormElement | null;

    newsletterForm?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const formData = new FormData(newsletterForm);
        const submitButton = newsletterForm.querySelector(
            'button[type="submit"]',
        ) as HTMLButtonElement;

        if (submitButton) {
            submitButton.disabled = true;
            submitButton.innerHTML =
                '<span class="inline-block animate-spin mr-2">‚è≥</span> Iscrizione in corso...';
        }

        try {
            const response = await fetch("/", {
                method: "POST",
                headers: {
                    "Content-Type": "application/x-www-form-urlencoded",
                },
                body: new URLSearchParams(formData as any).toString(),
            });

            if (response.ok) {
                const successMessage = document.createElement("div");
                successMessage.className = "success-message";
                successMessage.innerHTML =
                    "üéâ Benvenuto/a nella community! Controlla la tua email per confermare l'iscrizione.";
                newsletterForm.appendChild(successMessage);

                newsletterForm.reset();

                setTimeout(() => {
                    successMessage.remove();
                }, 5000);
            }
        } catch (error) {
            alert(
                "Si √® verificato un errore durante l'iscrizione. Riprova pi√π tardi.",
            );
        } finally {
            if (submitButton) {
                submitButton.disabled = false;
                submitButton.innerHTML = "‚ú® Iscriviti alla Newsletter";
            }
        }
    });
</script>
