---
import { getPortfolioItems } from '@/lib/firebase/firestore-server';
import Hero from "@/components/Hero.astro";
import Ellipses from "@/components/ui/Ellipses.astro";
import Section from "@/components/ui/Section.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import Card from "@/components/ui/Card.astro";
import { Sparkles, ExternalLink, ArrowRight } from "lucide-astro";

const pageTitle = "Portfolio";

// Recupera tutti i progetti da Firestore
const allProjects = await getPortfolioItems();

// Raggruppa i progetti per tipo
const projectsByType = {
    "ui-ux": allProjects.filter((p: any) => p.type === "ui-ux"),
    "brand-identity": allProjects.filter(
        (p: any) => p.type === "brand-identity",
    ),
    editorial: allProjects.filter((p: any) => p.type === "editorial"),
    illustration: allProjects.filter(
        (p: any) => p.type === "illustration",
    ),
};

// Ordina ogni gruppo per order
Object.keys(projectsByType).forEach((key) => {
    projectsByType[key as keyof typeof projectsByType].sort(
        (a: any, b: any) => (a.order || 0) - (b.order || 0),
    );
});

// Configurazione per ogni tipo di progetto
const typeConfig = {
    "ui-ux": {
        title: "UI / UX Design",
        description:
            "Interfacce pulite, intuitive e facili da usare per web e mobile",
        color: "bg-pink-100",
        badgeColor: "bg-pink-200 text-pink-700",
        count: projectsByType["ui-ux"].length,
    },
    "brand-identity": {
        title: "Brand Identity",
        description: "Identità visive che raccontano storie uniche",
        color: "bg-green-100",
        badgeColor: "bg-green-200 text-green-700",
        count: projectsByType["brand-identity"].length,
    },
    editorial: {
        title: "Editorial Design",
        description: "Layout editoriali moderni e professionali",
        color: "bg-purple-100",
        badgeColor: "bg-purple-200 text-purple-700",
        count: projectsByType["editorial"].length,
    },
    illustration: {
        title: "Illustrazioni",
        description:
            "Illustrazioni digitali e tradizionali creative e di stile",
        color: "bg-yellow-100",
        badgeColor: "bg-yellow-200 text-yellow-700",
        count: projectsByType["illustration"].length,
    },
};
---

<PageLayout pageTitle={pageTitle}>
    <Hero>
        <Fragment slot="title">Portfolio</Fragment>
    </Hero>

    <section class="flex mt-3 flex-col justify-center items-center">
        <p class="text-center max-w-2xl">
            Esplora i miei progetti creativi e le soluzioni che ho realizzato.
        </p>
    </section>

    <div class="flex justify-center items-center mt-10">
        <Ellipses class="" />
    </div>

    <Section class="section-primary mt-11 py-16">
        <div class="container mx-auto px-4">
            <!-- Titolo sezione -->
            <div class="text-center mb-12">
                <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
                    I miei lavori <span class="text-primary">Creativi</span>
                </h2>
                <p class="text-gray-600 text-lg max-w-3xl mx-auto">
                    Una selezione di progetti a cui ho lavorato
                </p>
                <p class="text-gray-600 max-w-3xl mx-auto">
                    Ogni creazione rappresenta un percorso di apprendimento e
                    un'esplorazione creativa.
                </p>
            </div>

            <!-- UI/UX Design Section -->
            {
                projectsByType["ui-ux"].length > 0 && (
                    <div class="mb-20">
                        <div class="text-center mb-8">
                            <h3 class="text-3xl font-bold text-gray-800 mb-3">
                                {typeConfig["ui-ux"].title}
                            </h3>
                            <p class="text-gray-600 max-w-2xl mx-auto">
                                {typeConfig["ui-ux"].description}
                            </p>
                            <div class="inline-flex items-center gap-2 mt-3 text-sm text-gray-500">
                                <span class="font-medium">
                                    {typeConfig["ui-ux"].count}{" "}
                                    {typeConfig["ui-ux"].count === 1
                                        ? "progetto"
                                        : "progetti"}
                                </span>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
                            {projectsByType["ui-ux"].map((project: any) => (
                                <a
                                    href={`/${project.slug}`}
                                    class="portfolio-card-link"
                                >
                                    <Card
                                        variant="shadow-md"
                                        size="spacious"
                                        class="portfolio-card relative overflow-hidden h-full"
                                    >
                                        <div
                                            class={`aspect-video flex items-center justify-center relative ${typeConfig["ui-ux"].color}`}
                                        >
                                            {project.featuredImage ? (
                                                <img
                                                    src={project.featuredImage}
                                                    alt={project.title}
                                                    class="w-full h-full object-cover"
                                                />
                                            ) : (
                                                <div class="text-center p-8">
                                                    <ExternalLink
                                                        size={48}
                                                        class="mx-auto mb-4 opacity-30 text-gray-400"
                                                    />
                                                    <p class="text-2xl font-bold text-gray-300 uppercase tracking-wider">
                                                        {project.status ===
                                                        "in-progress"
                                                            ? "IN PROGRESS"
                                                            : "Completato"}
                                                    </p>
                                                </div>
                                            )}
                                        </div>

                                        <div class="p-6">
                                            <div class="mb-3">
                                                <span
                                                    class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${typeConfig["ui-ux"].badgeColor}`}
                                                >
                                                    {project.category || "UI/UX"}
                                                </span>
                                            </div>
                                            <h4 class="text-xl font-bold text-gray-800 mb-2">
                                                {project.title}
                                            </h4>
                                            <p class="text-gray-600 mb-4 line-clamp-3">
                                                {project.body?.substring(0, 150) || project.title}
                                            </p>
                                            <div class="flex items-center text-primary font-medium text-sm">
                                                Vedi progetto
                                                <ArrowRight
                                                    size={16}
                                                    class="ml-1"
                                                />
                                            </div>
                                        </div>
                                    </Card>
                                </a>
                            ))}
                        </div>
                    </div>
                )
            }

            <!-- Brand Identity Section -->
            {
                projectsByType["brand-identity"].length > 0 && (
                    <div class="mb-20">
                        <div class="text-center mb-8">
                            <h3 class="text-3xl font-bold text-gray-800 mb-3">
                                {typeConfig["brand-identity"].title}
