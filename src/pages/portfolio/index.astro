                                    {typeConfig["brand-identity"].count === 1
                                        ? "progetto"
                                        : "progetti"}
                                </span>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
                            {projectsByType["brand-identity"].map(
                                (project: any) => (
                                    <a
                                        href={`/${project.slug}`}
                                        class="portfolio-card-link"
                                    >
                                        <Card
                                            variant="shadow-md"
                                            size="spacious"
                                            class="portfolio-card relative overflow-hidden h-full"
                                        >
                                            <div
                                                class={`aspect-video flex items-center justify-center relative ${typeConfig["brand-identity"].color}`}
                                            >
                                                {project.featuredImage ? (
                                                    <img
                                                        src={project.featuredImage}
                                                        alt={project.title}
                                                        class="w-full h-full object-cover"
                                                    />
                                                ) : (
                                                    <div class="text-center p-8">
                                                        <ExternalLink
                                                            size={48}
                                                            class="mx-auto mb-4 opacity-30 text-gray-400"
                                                        />
                                                        <p class="text-2xl font-bold text-gray-300 uppercase tracking-wider">
                                                            {project.status ===
                                                            "in-progress"
                                                                ? "IN PROGRESS"
                                                                : "Completato"}
                                                        </p>
                                                    </div>
                                                )}
                                            </div>

                                            <div class="p-6">
                                                <div class="mb-3">
                                                    <span
                                                        class={`inline-block px-3 py-1 rounded-full text-sm font-medium ${typeConfig["brand-identity"].badgeColor}`}
                                                    >
                                                        {project.category || "Brand Identity"}
                                                    </span>
                                                </div>
                                                <h4 class="text-xl font-bold text-gray-800 mb-2">
                                                    {project.title}
                                                </h4>
                                                <p class="text-gray-600 mb-4 line-clamp-3">
                                                    {project.body?.substring(0, 150) || project.title}
                                                </p>
                                                <div class="flex items-center text-primary font-medium text-sm">
                                                    Vedi progetto
                                                    <ArrowRight
                                                        size={16}
                                                        class="ml-1"
                                                    />
                                                </div>
                                            </div>
                                        </Card>
                                    </a>
                                ),
                            )}
                        </div>
                    </div>
                )
            }

            <!-- Editorial Design Section -->
            {
                projectsByType["editorial"].length > 0 && (
                    <div class="mb-20">
                        <div class="text-center mb-8">
                            <h3 class="text-3xl font-bold text-gray-800 mb-3">
                                {typeConfig["editorial"].title}
                            </h3>
                            <p class="text-gray-600 max-w-2xl mx-auto">
                                {typeConfig["editorial"].description}
                            </p>
                            <div class="inline-flex items-center gap-2 mt-3 text-sm text-gray-500">
                                <span class="font-medium">
                                    {typeConfig["editorial"].count}{" "}
                                    {typeConfig["editorial"].count === 1
                                        ? "progetto"
                                        : "progetti"}
                                </span>
                            </div>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
                            {projectsByType["editorial"].map((project: any) => (
                                <a
                                    href={`/${project.slug}`}
                                    class="portfolio-card-link"
                                >
                                    <Card
                                        variant="shadow-md"
                                        size="spacious"
                                        class="portfolio-card relative overflow-hidden h-full"
                                    >
                                        <div
                                            class={`aspect-video flex items-center justify-center relative ${typeConfig["editorial"].color}`}
                                        >
                                            {project.featuredImage ? (
                                                <img
                                                    src={project.featuredImage}
                                                    alt={project.title}
                                                    class="w-full h-full object-cover"
                                                />
                                            ) : (
                                                <div class="text-center p-8">
                                                    <ExternalLink
                                                        size={48}
