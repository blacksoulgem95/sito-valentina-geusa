---
import Hero from "@/components/Hero.astro";
import Ellipses from "@/components/ui/Ellipses.astro";
import Section from "@/components/ui/Section.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import Card from "@/components/ui/Card.astro";
import { Sparkles, Heart, Palette, Code } from "lucide-astro";

const pageTitle = "Su di me";
---

<PageLayout pageTitle={pageTitle}>
    <Hero title="Su di me" />

    <section class="flex mt-3 flex-col justify-center items-center">
        <p class="text-center max-w-2xl">
            Sono Valentina, graphic & web designer con la passione per la
            creatività e il design funzionale.
        </p>
    </section>

    <div class="flex justify-center items-center mt-10">
        <Ellipses class="" />
    </div>

    <Section class="section-primary mt-11 py-16">
        <div class="container mx-auto px-4">
            <!-- Sezione con immagine e testo -->
            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto mb-16 items-center"
            >
                <!-- Immagine Placeholder - Sinistra -->
                <div class="order-2 lg:order-1">
                    <div
                        class="aspect-square bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden"
                    >
                        <div class="text-center text-gray-400 p-8">
                            <Palette
                                size={64}
                                class="mx-auto mb-4 opacity-50"
                            />
                            <p class="text-lg font-medium">
                                Inserisci qui la tua immagine
                            </p>
                            <p class="text-sm mt-2">
                                Placeholder per foto profilo
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Testo - Destra -->
                <div class="order-1 lg:order-2">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-gray-800 mb-6"
                    >
                        Chi sono
                    </h2>
                    <div class="space-y-4 text-gray-700 text-lg">
                        <p>
                            Ciao! Sono Valentina Geusa, una graphic & web
                            designer appassionata di creatività e innovazione
                            digitale.
                        </p>
                        <p>
                            Il mio lavoro si concentra sulla creazione di
                            identità visive uniche, design web accattivanti e
                            contenuti social che catturano l'attenzione.
                        </p>
                        <p>
                            Amo trasformare idee in progetti concreti,
                            combinando estetica e funzionalità per offrire
                            soluzioni su misura per ogni cliente.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Cards Competenze -->
            <div class="max-w-6xl mx-auto mb-16">
                <h2
                    class="text-3xl md:text-4xl font-bold text-gray-800 mb-8 text-center"
                >
                    Cosa faccio
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <Card
                        variant="shadow-md"
                        size="spacious"
                        class="text-center"
                    >
                        <div class="flex flex-col items-center">
                            <div class="form-header-icon mb-4">
                                <Palette size={48} />
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-3">
                                Graphic Design
                            </h3>
                            <p class="text-gray">
                                Creo identità visive, loghi e illustrazioni che
                                raccontano storie uniche.
                            </p>
                        </div>
                    </Card>

                    <Card
                        variant="shadow-md"
                        size="spacious"
                        class="text-center"
                    >
                        <div class="flex flex-col items-center">
                            <div class="form-header-icon mb-4">
                                <Code size={48} />
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-3">
                                Web Design
                            </h3>
                            <p class="text-gray">
                                Realizzo siti web moderni, responsive e
                                ottimizzati per ogni dispositivo.
                            </p>
                        </div>
                    </Card>

                    <Card
                        variant="shadow-md"
                        size="spacious"
                        class="text-center"
                    >
                        <div class="flex flex-col items-center">
                            <div class="form-header-icon mb-4">
                                <Heart size={48} />
                            </div>
                            <h3 class="text-xl font-bold text-gray-800 mb-3">
                                Social Content
                            </h3>
                            <p class="text-gray">
                                Progetto contenuti social coinvolgenti che
                                valorizzano il tuo brand.
                            </p>
                        </div>
                    </Card>
                </div>
            </div>

            <!-- CTA Finale -->
            <div class="text-center">
                <div class="flex justify-center items-center gap-4 mb-6">
                    <Sparkles size={32} class="text-yellow-400" />
                    <h3 class="text-2xl font-bold text-gray-800">
                        Lavoriamo insieme!
                    </h3>
                    <Sparkles size={32} class="text-yellow-400" />
                </div>
                <p class="text-gray text-lg mb-8 max-w-2xl mx-auto">
                    Hai un progetto in mente? Sono sempre aperta a nuove
                    opportunità e collaborazioni creative.
                </p>
                <div class="flex justify-center items-center gap-4">
                    <a href="/contact" class="btn btn-primary">Contattami</a>
                    <a href="/" class="btn btn-primary btn-outline"
                        >Torna alla Home</a
                    >
                </div>
            </div>
        </div>
    </Section>
</PageLayout>

<style>
    .aspect-square {
        aspect-ratio: 1 / 1;
    }
</style>
