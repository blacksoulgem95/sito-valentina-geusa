---
import { Image } from "astro:assets";
import Hero from "@/components/Hero.astro";
import Ellipses from "@/components/ui/Ellipses.astro";
import Section from "@/components/ui/Section.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import Card from "@/components/ui/Card.astro";
import { Sparkles, Heart, Palette, Code } from "lucide-astro";
import AboutCard from "@/components/ui/about/Card.astro";
import valentinaImage from "@/assets/valentina.jpg";
import Ellipses from "@/components/ui/Ellipses.astro";
import Section from "@/components/ui/Section.astro";
import TeoriaColore from "@/assets/about/teoria-colore.svg";
import Illustrazione from "@/assets/about/illustrazione.svg";
import progettazioneImg from "@/assets/about/progettazione.png";
import tipografiaImg from "@/assets/about/tipografia.png";
import fotoritoccoImg from "@/assets/about/fotoritocco.png";
import brandingImg from "@/assets/about/branding.png";
import StarIcon from "@/assets/about/star.svg";
import star from "@/assets/about/star.svg";
import Contact from "@/components/Contact.astro";

const pageTitle = "Su di me";
---

<PageLayout pageTitle={pageTitle}>
    <Hero />

    <Section class="bg-transparent mt-11 py-16">
        <div class="container mx-auto px-4">
            <!-- Sezione con immagine e testo -->
            <div
                class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto mb-16 items-center"
            >
                <!-- Immagine - Sinistra -->
                <div class="order-2 lg:order-1">
                    <div class="rounded-[75px] overflow-hidden shadow-lg">
                        <Image
                            src={valentinaImage}
                            alt="Valentina Geusa - Graphic & Web Designer"
                            width={600}
                            height={600}
                            class="w-full h-full object-cover"
                            loading="eager"
                            quality={85}
                        />
                    </div>
                </div>

                <!-- Testo - Destra -->
                <div class="order-1 lg:order-2">
                    <h2
                        class="text-3xl md:text-4xl font-bold text-gray-800 mb-6"
                    >
                        Su di <span
                            class="bg-gradient-to-b
                            from-secondary
                            to-primary-to
                          bg-clip-text
                          text-transparent"
                            >me</span
                        >
                    </h2>
                    <div class="space-y-4 text-gray-700 text-lg">
                        <p>
                            Ciao! Sono Valentina, <b
                                class="text-secondary-to-alt"
                                >graphic designer</b
                            > e
                            <b class="text-secondary">illustratrice</b>. La mia
                            passione per la grafica è nata quando avevo appena
                            12 anni: trascorrevo interi pomeriggi a creare
                            template e grafiche per forum e blog, sperimentando
                            con colori e forme senza rendermi conto che stavo
                            già costruendo le basi di quello che sarebbe stato
                            il mio domani!
                        </p>
                        <p>
                            Dopo aver seguito un corso di formazione in graphic
                            design, ho deciso di trasformare questa passione in
                            una strada professionale. Anche se i miei lavori
                            "ufficiali" sono ancora pochi, porto con me anni di
                            esercizio personale e tanta voglia di crescere e
                            sperimentare.
                        </p>
                        <p>
                            Oltre alla grafica, coltivo anche il disegno sia
                            digitale che tradizionale, unendo le due cose per
                            dare vita a progetti visivi unici, che raccontano
                            storie e trasmettono emozioni.
                        </p>
                        <p>
                            Mi piace lavorare con palette armoniose, dettagli
                            curati e soluzioni creative che sappiano dare
                            un'identità chiara e personale a chi sceglie di
                            affidarsi a me.
                        </p>

                        <div class="relative max-w-5xl w-full mx-auto mt-3">
                            <!-- Etichetta "Cosa amo?" -->
                            <div class="absolute -top-6 left-0">
                                <div
                                    class="absolute left-0 top-0
                                     bg-[#FFC4E8]
                                     border border-[rgba(255,112,202,0.64)]
                                     rounded-[26.3602px]
                                     px-4 py-2
                                     whitespace-nowrap
                                     text-[#A84773] font-medium"
                                >
                                    Cosa amo?
                                </div>
                            </div>

                            <!-- Cards -->
                            <div
                                class="mt-8 flex flex-col md:flex-row gap-6 items-stretch"
                            >
                                <div class="flex-1 flex">
                                    <AboutCard>
                                        <Fragment slot="icon">
                                            <Image
                                                src={import(
                                                    "@/assets/about/font.png"
                                                )}
                                                alt="Font icon"
                                                width={48}
                                                height={48}
                                            />
                                        </Fragment>
                                        <Fragment slot="text"
                                            >Sans Serif Font</Fragment
                                        >
                                    </AboutCard>
                                </div>

                                <div class="flex-1 flex">
                                    <AboutCard>
                                        <Fragment slot="icon">
                                            <Image
                                                src={import(
                                                    "@/assets/about/palette.png"
                                                )}
                                                alt="Palette icon"
                                                width={48}
                                                height={48}
                                            />
                                        </Fragment>
                                        <Fragment slot="text"
                                            >Palette colori pastello</Fragment
                                        >
                                    </AboutCard>
                                </div>

                                <div class="flex-1 flex">
                                    <AboutCard>
                                        <Fragment slot="icon">
                                            <Image
                                                src={import(
                                                    "@/assets/about/heart.png"
                                                )}
                                                alt="Heart icon"
                                                width={48}
                                                height={48}
                                            />
                                        </Fragment>
                                        <Fragment slot="text"
                                            >Disegno grafico e tradizionale</Fragment
                                        >
                                    </AboutCard>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-center mb-10">
                <Ellipses />
            </div>
        </div>
    </Section>

    <Section class="bg-gradient-to-b from-tertiary to-[#fff0f9]">
        <div class="mt-38 flex justify-center items-center flex-col text-gray">
            <h3 class="text-4xl font-bold">
                Skills & <span class="text-secondary-to-alt">Expertise</span>
            </h3>
            <p>
                Ogni giorno scopro nuovi modi per crescere, imparare e
                trasformare idee in design
            </p>
        </div>
        <div
            class="mt-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 max-w-5xl mx-auto"
        >
            <AboutCard class="justify-start">
                <Fragment slot="icon">
                    <div class="flex justify-start text-left">
                        <div class="aspect-square p-4 rounded-md bg-tertiary">
                            <TeoriaColore />
                        </div>
                    </div>
                </Fragment>
                <Fragment slot="text">
                    <div class="flex justify-start gap-1 flex-col text-left">
                        <p class="text-primary">Teoria del colore</p>
                        <p>Creazione di palette cromatiche armoniose</p>
                    </div>
                </Fragment>
            </AboutCard>

            <AboutCard class="justify-start">
                <Fragment slot="icon">
                    <div class="flex justify-start text-left">
                        <div class="aspect-square p-4 rounded-md bg-tertiary">
                            <Illustrazione />
                        </div>
                    </div>
                </Fragment>
                <Fragment slot="text">
                    <div class="flex justify-start gap-1 flex-col text-left">
                        <p class="text-primary">Illustrazione</p>
                        <p>Disegno digitale e tradizionale</p>
                    </div>
                </Fragment>
            </AboutCard>

            <AboutCard class="justify-start">
                <Fragment slot="icon">
                    <div class="flex justify-start text-left">
                        <div class="aspect-square p-4 rounded-md bg-tertiary">
                            <Image
                                src={progettazioneImg}
                                alt="Progettazione icon"
                                width={48}
                                height={48}
                            />
                        </div>
                    </div>
                </Fragment>
                <Fragment slot="text">
                    <div class="flex justify-start gap-1 flex-col text-left">
                        <p class="text-primary">Progettazione del layout</p>
                        <p>Organizzazione degli elementi visivi</p>
                    </div>
                </Fragment>
            </AboutCard>

            <AboutCard class="justify-start">
                <Fragment slot="icon">
                    <div class="flex justify-start text-left">
                        <div class="aspect-square p-4 rounded-md bg-tertiary">
                            <Image
                                src={tipografiaImg}
                                alt="Tipografia icon"
                                width={48}
                                height={48}
                            />
                        </div>
                    </div>
                </Fragment>
                <Fragment slot="text">
                    <div class="flex justify-start gap-1 flex-col text-left">
                        <p class="text-primary">Tipografia</p>
                        <p>Composizioni tipografiche curate</p>
                    </div>
                </Fragment>
            </AboutCard>

            <AboutCard class="justify-start">
                <Fragment slot="icon">
                    <div class="flex justify-start text-left">
                        <div class="aspect-square p-4 rounded-md bg-tertiary">
                            <Image
                                src={fotoritoccoImg}
                                alt="Fotoritocco icon"
                                width={48}
                                height={48}
                            />
                        </div>
                    </div>
                </Fragment>
                <Fragment slot="text">
                    <div class="flex justify-start gap-1 flex-col text-left">
                        <p class="text-primary">Fotoritocco</p>
                        <p>Modifica ed esaltazione delle immagini</p>
                    </div>
                </Fragment>
            </AboutCard>

            <AboutCard class="justify-start">
                <Fragment slot="icon">
                    <div class="flex justify-start text-left">
                        <div class="aspect-square p-4 rounded-md bg-tertiary">
                            <Image
                                src={brandingImg}
                                alt="Branding icon"
                                width={48}
                                height={48}
                            />
                        </div>
                    </div>
                </Fragment>
                <Fragment slot="text">
                    <div class="flex justify-start gap-1 flex-col text-left">
                        <p class="text-primary">Branding</p>
                        <p>Creazione di identità visive</p>
                    </div>
                </Fragment>
            </AboutCard>
        </div>

        <div class="max-w-5xl mx-auto mt-10">
            <div
                class="rounded-[25px] p-8 md:p-12 border bg-[rgba(255,174,224,0.1)] border-[rgba(255,161,218,0.44)]"
            >
                <!-- Header con icona stella -->
                <div class="flex items-center gap-3 mb-6">
                    <StarIcon class="w-6 h-6" />
                    <h3 class="text-2xl font-bold text-primary">
                        <span class="text-primary">Strumenti</span> che utilizzo
                    </h3>
                </div>

                <!-- Chips degli strumenti -->
                <div class="flex flex-wrap gap-3">
                    <span
                        class="px-4 py-2 bg-white rounded-full text-gray-800 font-medium shadow-sm hover:shadow-md transition-shadow"
                    >
                        Adobe Photoshop
                    </span>
                    <span
                        class="px-4 py-2 bg-white rounded-full text-gray-800 font-medium shadow-sm hover:shadow-md transition-shadow"
                    >
                        Adobe Illustrator
                    </span>
                    <span
                        class="px-4 py-2 bg-white rounded-full text-gray-800 font-medium shadow-sm hover:shadow-md transition-shadow"
                    >
                        Figma
                    </span>
                    <span
                        class="px-4 py-2 bg-white rounded-full text-gray-800 font-medium shadow-sm hover:shadow-md transition-shadow"
                    >
                        Canva
                    </span>
                    <span
                        class="px-4 py-2 bg-white rounded-full text-gray-800 font-medium shadow-sm hover:shadow-md transition-shadow"
                    >
                        Procreate
                    </span>
                    <span
                        class="px-4 py-2 bg-white rounded-full text-gray-800 font-medium shadow-sm hover:shadow-md transition-shadow"
                    >
                        Adobe InDesign
                    </span>
                </div>
            </div>
        </div>

        <div class="flex justify-center items-center mt-36">
            <Ellipses class="" />
        </div>

        <div class="mt-36">
            <Contact />
        </div>
    </Section>
</PageLayout>

<style>
    .aspect-square {
        aspect-ratio: 1 / 1;
    }
</style>
